# Required Settings
RTSP_URL=rtsp://username:password@192.168.1.100/stream
GOOGLE_DEVICE_IP=192.168.1.200

# LLM Provider Settings (choose one)
OPENAI_API_KEY=your_openai_api_key_here
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1

# Timing Settings
CAPTURE_INTERVAL=10
RTSP_TIMEOUT=10
LLM_TIMEOUT=30
CHROMECAST_TIMEOUT=15

# Storage Settings
IMAGES_DIR=images
MAX_IMAGES=100
MAX_IMAGE_SIZE=10485760

# Notification Settings
NOTIFICATION_TARGET=both
GOOGLE_DEVICE_NAME=Kitchen display
BROADCAST_VOLUME=1.0
BROADCAST_MESSAGE_TEMPLATE=Person detected: {desc}

# Model Settings
YOLO_MODEL_PATH=yolov8n.pt

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY=1.0